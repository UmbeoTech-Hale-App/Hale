<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="@drawable/fitness_1" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="138dp"
            android:layout_height="43dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="9dp"
            android:layout_marginTop="25dp"
            android:textSize="24dp" />

        <!--        android:text="DashBoard"-->
        <!--            android:textColor="@color/mdtp_white"-->


        <!--    <androidx.core.widget.NestedScrollView-->
        <!--        android:layout_width="match_parent"-->
        <!--        android:layout_height="match_parent">-->

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="550dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="250dp"
            android:layout_marginEnd="0dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="698dp"
                android:layout_below="@+id/r2"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="-21dp">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/chart_recyclerview"
                    android:layout_width="362dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="23dp"
                    android:layout_marginTop="226dp"
                    android:layout_marginEnd="12dp"
                    tools:ignore="NotSibling" />

                <RelativeLayout
                    android:id="@+id/relativelayout1"
                    android:layout_width="377dp"
                    android:layout_height="192dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="-91dp"
                    android:layout_marginTop="18dp"
                    android:layout_marginEnd="12dp">

                    <Button
                        android:id="@+id/water_activity_button"
                        android:layout_width="160dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="5dp"
                        android:background="@drawable/btn_rounded_green_300"
                        android:text="Water Intake" />

                    <Button
                        android:id="@+id/step_counter_activity_button"
                        android:layout_width="160dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/btn_rounded_green_300"
                        android:text="Steps" />


                    <Button
                        android:id="@+id/heartbeat_activity_button"
                        android:layout_width="161dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="132dp"
                        android:background="@drawable/btn_rounded_green_300"
                        android:text="HeartBeat Analysis" />

                    <Button
                        android:id="@+id/BP_activity_button"
                        android:layout_width="160dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="103dp"
                        android:layout_marginTop="131dp"
                        android:layout_marginEnd="5dp"
                        android:background="@drawable/btn_rounded_green_300"
                        android:text="Screen Monitoring" />

                    <Button
                        android:id="@+id/sleep_activity_button"
                        android:layout_width="160dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="67dp"
                        android:layout_marginEnd="5dp"
                        android:background="@drawable/btn_rounded_green_300"
                        android:text="Sleep Analysis" />

                    <Button
                        android:id="@+id/app_usage_activity_button"
                        android:layout_width="160dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="63dp"
                        android:background="@drawable/btn_rounded_green_300"
                        android:text="App Usage Analysis" />

                </RelativeLayout>

                <Button
                    android:id="@+id/retrogit_activity_button"
                    android:layout_width="187dp"
                    android:layout_height="76dp"
                    android:layout_below="@+id/chart_recyclerview"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="18dp"
                    android:layout_marginTop="51dp"
                    android:text="Retrofit"
                    android:visibility="gone"
                    />

            </RelativeLayout>
        </androidx.core.widget.NestedScrollView>


        <ImageView
            android:id="@+id/menu_imageview"
            android:layout_width="62dp"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="4dp"
            android:layout_marginRight="10dp"
            android:clickable="true"
            android:src="@drawable/ic_stack_menu" />


    </RelativeLayout>


</androidx.coordinatorlayout.widget.CoordinatorLayout>
